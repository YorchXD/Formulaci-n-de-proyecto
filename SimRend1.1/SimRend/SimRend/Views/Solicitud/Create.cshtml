@using SimRend.Models
@model SimRend.Models.Solicitud

@{
    ViewData["Title"] = "Crear Solicitud";
}

<h3>Datos principales de la solicitud</h3>
<hr />

<div class="bodyStep">
        <div class="mx-auto col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NombreEvento" class="control-label">Nombre del evento</label>
                    <input asp-for="NombreEvento" class="form-control" />
                    <span asp-validation-for="NombreEvento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LugarEvento" class="control-label">Lugar del evento</label>
                    <input asp-for="LugarEvento" class="form-control" />
                    <span asp-validation-for="LugarEvento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaInicioEvento" class="control-label">Fecha inicio del evento</label>
                    <input asp-for="FechaInicioEvento" type="date" class="form-control" />
                    <span asp-validation-for="FechaInicioEvento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaTerminoEvento" class="control-label">Fecha término del evento</label>
                    <input asp-for="FechaTerminoEvento" type="date" class="form-control" />
                    <span asp-validation-for="FechaTerminoEvento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Monto" class="control-label">Monto a solicitar</label>
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input asp-for="Monto" class="form-control" />
                        </div>
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group ">
                    <label asp-for="Responsable" class="control-label">Responsable de la solicitud</label>
                    <input asp-for="Responsable" class="form-control" />
                    <span asp-validation-for="Responsable" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding-top: calc(0.5em + 6px); text-align:right;">
                    <input type="submit" value="Siguiente" class="btn btn-success my-2 my-sm-0" />
                </div>
            </form>
        </div>
    </div>
