
@{
    ViewData["Title"] = "Crear Centro de Alumnos";
}

<div class="row">
  <div class="col-sm-9"><h3>Crear Centro de Alumnos</h3></div>
  <div class="col-sm-3"><br>
      <h4>Paso 2 </h4>
    </div>
</div>
<hr />

<div class="bodyStep mx-auto col-md-8">
    @using (Html.BeginForm("CrearNuevoCAA", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data"}))
    {
        <div class="">
            <div class="form-group">
                <label for="Nombre" class="control-label">Director de Carrera:</label>
                <input type="text" class="form-control" name="NomDirCarrera" required />
            </div>
            <div class="form-group">
                <label class="control-label">SexoDirCarrera:</label>
                <select class="form-control" name="SexoDirDAAE" required>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Nombre" class="control-label">Carrera:</label>
                <input type="text" class="form-control" name="Carrera" required />
            </div>

            <button type="submit" class="btn btn-success">Crear Nuevo Centro de Alumnos</button>

        </div>
    }

</div>


@section Scripts {
