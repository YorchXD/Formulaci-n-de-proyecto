@model SimRend.Models.Login
@{
    Layout = null;
}
<head>
    <meta charset="UTF-8" />
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  -->
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css " />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <header> 
            <h1></h1> 
        </header>
        <section>
            @using (Html.BeginForm("Validar", "Usuario", FormMethod.Post, new { @style = "border:none" }))
            {
                <div id="container_demo">
                    <div id="wrapper">          
                        <div id="login" class="animate form">
                            <h1>Iniciar Sesión</h1>
                            <form action="mysuperscript.php" autocomplete="on">
                                <p>
                                    <label for="username" class="uname"> Nombre de la Organización Estudiantil </label>
                                    <input asp-for="Usuario" class="uname" required="required" type="text" placeholder="Nombre de la persona" />
                                    <!--input id="username" name="username" required="required" type="text" placeholder="myusername or mymail@mail.com" /-->
                                </p>
                                <p>
                                    <label for="password" class="youpasswd"> Contraseña </label>
                                    <input asp-for="Clave" class="uname" required="required" type="password" placeholder="eg. X8df!90EO" />
                                    <!--input id="password" name="password" required="required" type="password" placeholder="eg. X8df!90EO" /-->
                                </p>
                                <input type="submit" class="btn btn-primary" value="Ingresar" />
                            </form>
                        </div>
                    </div>
                </div>
            }
        </section>

        <hr />
        <div class="footer-style">
            <p>&copy; 2018 - SimRend</p>
        </div>
    </div>

    
</body>