@{
    ViewData["Title"] = "Usuarios representantes";
}


<div class="d-lg-flex justify-content-lg-between align-items-lg-center mg-l-30 mg-r-30">
    <div style="border:none;" class="row input-group-text">
        <i class="icon fa fa-clipboard-list tx-60"></i>
        <h4 class="mg-t-15 mg-l-10">Lista de representantes registrados</h4>
    </div>
    <div class="mg-r-30 mg-md-r-0">
        <a class="btn btn-info pd-x-25 tx-11 tx-mont tx-semibold pd-y-12" asp-controller="Usuario" asp-action="CrearUsuarioRepresentante">
            <i class="icon fas fa-plus-square tx-11"></i> Agregar Representante
        </a>
    </div>
</div>


<div class="br-pagebody">
    <div class="br-section-wrapper">

        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="form-group wd-auto col-lg-4 col-md-12">
                    <label class="form-control-label">Campus: </label>
                    <div class="input-group parsley-select" id="campusSelectMarco">
                        <div class="input-group-prepend">
                            <div class="input-group-text wd-xs-45">
                                <i class="fas fa-map-marked-alt tx-16 lh-0 op-6 fa-fw"></i>
                            </div>
                        </div>
                        <select name="campusSelect" class="form-control select2" data-placeholder="Seleccione un campus" id="campusSelect" required
                                data-parsley-class-handler="#campusSelectMarco" data-parsley-errors-container="#errorCampusSelect">
                            <option selected disabled>Seleccione un campus</option>
                        </select>
                    </div>
                    <div id="errorCampusSelect"></div>
                </div>

                <div class="form-group wd-auto col-lg-4 col-md-12">
                    <label class="form-control-label">Organización estudiantil: </label>
                    <div class="input-group parsley-select" id="oeSelectMarco">
                        <div class="input-group-prepend">
                            <div class="input-group-text wd-xs-45">
                                <i class="fas fa-sitemap tx-16 lh-0 op-6 fa-fw"></i>
                            </div>
                        </div>
                        <select name="oeSelect" class="form-control select2" data-placeholder="Seleccione una O.E." id="oeSelect" required
                                data-parsley-class-handler="#oeSelectMarco" data-parsley-errors-container="#errorOESelect">
                            <option selected disabled>Seleccione una O.E.</option>
                        </select>
                    </div>
                    <div id="errorOESelect"></div>
                </div>


                <div class="form-group wd-auto col-lg-4 col-md-12">
                    <label class="form-control-label">Rol: </label>
                    <div class="input-group parsley-select" id="rolSelectMarco">
                        <div class="input-group-prepend">
                            <div class="input-group-text wd-xs-45">
                                <i class="fas fa-tag tx-16 lh-0 op-6 fa-fw"></i>
                            </div>
                        </div>
                        <select name="rolSelect" class="form-control select2" data-placeholder="Seleccione un rol" id="rolSelect" required
                                data-parsley-class-handler="#rolSelectMarco" data-parsley-errors-container="#errorRolSelect">
                            <option selected disabled>Seleccione un rol</option>
                        </select>
                    </div>
                    <div id="errorRolSelect"></div>
                </div>
            </div>
        </div>

        <div class="dataTables_wrapper">
            <table id="tablaUsuarioRepresentante" class="table display responsive nowrap" style="width:100%">
                <thead class="thead-colored thead-info">
                    <tr>
                        <th data-priority="1">Id</th>
                        <th>Nombre</th>
                        <th>Matrícula</th>
                        <th>Email</th>
                        <th>Institucion</th>
                        <th>Campus</th>
                        <th>OE</th>
                        <th>Rol</th>
                        <th data-priority="1">Estado</th>
                        <th data-priority="1">Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <!-- MODAL ELIMINAR PROCESO -->
    <div id="modal-alert" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content tx-size-sm">
                <div class="modal-body tx-center pd-y-20 pd-x-20">
                    <div id="icon-delete">
                        <i class="ionicons ion-ios-help-outline tx-100 tx-danger lh-1 mg-t-20 d-inline-block"></i>
                    </div>
                    <div id="icon-delete-confirm">
                        <i class="ionicons ion-ios-help-outline tx-100 tx-danger lh-1 mg-t-20 d-inline-block"></i>
                    </div>
                    <div id="icon-delete-success">
                        <i class="icon ion-ios-checkmark-outline tx-100 tx-danger lh-1 mg-t-20 d-inline-block"></i>
                    </div>


                    <div id="icon-problema">
                        <i class="icon ion-ios-close-outline tx-100 tx-danger lh-1 mg-t-20 d-inline-block"></i>
                    </div>

                    <div>
                        <h4 class="tx-danger" tx-semibold mg-b-20" id="title-alerta-eliminar">Eliminar representante</h4>
                        <h4 class="tx-danger" tx-semibold mg-b-20" id="title-alerta-problemas"></h4>
                    </div>

                    <div>
                        <p class="mg-b-20 mg-x-20" id="body-alerta"></p>
                    </div>

                    <div>
                        <input id="idDirector" name="idDirector" value="" />
                    </div>

                    <div id="actions-alerta">

                    </div>
                </div><!-- modal-body -->
            </div><!-- modal-content -->
        </div><!-- modal-dialog -->
    </div><!-- modal -->

</div>

@section scripts{
    <script src="~/js/Usuario.js"></script>
    <script>
        $(document).ready(function ()
        {
            main();
        });
    </script>
}
